<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Fire Risk Gauge at top of dashboard -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.besteady.ui.widgets.FireRiskGauge
                    android:id="@+id/fireRiskGauge"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvFireRiskStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Safe"
                    style="@style/TextBody"
                    android:gravity="center" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Emergency Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Status"
                    style="@style/TextSubhead"
                    android:textColor="@color/red_emergency"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvDrillStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No active drill"
                    style="@style/TextBody"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartDrill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Drill"
                    style="@style/Button.Modern.Danger"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStopDrill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stop Drill"
                    style="@style/Button.Modern.Success"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Timer Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Response Timer"
                    style="@style/TextSubhead"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/blue_primary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEmergencyCall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Emergency Call"
                        android:layout_marginEnd="6dp"
                        style="@style/Button.Modern.Primary"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPoliceArrival"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Police Arrival"
                        android:layout_marginEnd="6dp"
                        style="@style/Button.Modern.Primary"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCompleteEvacuation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Complete Evacuation"
                        style="@style/Button.Modern.Primary"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- User Responses -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Safety Status"
                    style="@style/TextSubhead"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Safe:"
                        style="@style/TextBody"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSafeCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        style="@style/TextBody"
                        android:textColor="@color/green_safe"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Not Responded:"
                        style="@style/TextBody"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNotRespondedCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        style="@style/TextBody"
                        android:textColor="@color/red_emergency"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>