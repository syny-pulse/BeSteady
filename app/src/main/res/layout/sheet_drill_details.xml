<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drill Details"
            style="@style/TextSubhead"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date &amp; Time"
                    style="@style/TextSubhead"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextBody"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    style="@style/TextSubhead"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextBody"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency call made at"
                    style="@style/TextSubhead"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvEmergencyCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextBody"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Police arrival"
                    style="@style/TextSubhead"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvPoliceArrival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextBody"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Evacuation completed"
                    style="@style/TextSubhead"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvEvacuation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextBody"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Evacuation points"
                    style="@style/TextSubhead"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvEvacuationPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextBody"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fatalities"
                    style="@style/TextSubhead"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvFatalities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextBody"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extra comment"
                    style="@style/TextSubhead"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    style="@style/TextBody"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>

